
<header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Consumable Name'
        /></h1>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>Type</label>
          <input
            type='text'
            name='system.type'
            value='{{system.type}}'
            placeholder='consumable'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>Uses</label>
          <input
            type='text'
            name='system.uses'
            value='{{system.uses}}'
            data-dtype='Number'
            placeholder='0'
          />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>Description</a>
    <a class='item' data-tab='attributes'>Attributes</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
        enrichedDescription
        target='system.description'
        engine='prosemirror'
        button=true
        editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      <div class='resource'>
        <label class='resource-label'>Properties</label>
        <input
          type='text'
          name='system.properties'
          value='{{system.properties}}'
          placeholder='Enter properties'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>Type</label>
        <input
          type='text'
          name='system.type'
          value='{{system.type}}'
          placeholder='consumable'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>Uses Remaining</label>
        <input
          type='text'
          name='system.uses'
          value='{{system.uses}}'
          data-dtype='Number'
          placeholder='0'
        />
      </div>
    </div>
  </section>

