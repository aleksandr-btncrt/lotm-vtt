<div class="main-content">
  <div class="left-stats">
    <div class="stat-box">
      <span class="stat-label">{{localize 'LOTM.Ability.Agi.long'}}</span>
      {{#if editable}}
      <input type="text" name="system.abilities.agi.value" value="{{abilities.agi.value}}" data-dtype="Number" />
      {{else}}
      <span class="stat-value">{{abilities.agi.value}}</>
        {{/if}}
    </div>
    <div class="stat-box">
      <span class="stat-label">{{localize 'LOTM.Ability.Cha.long'}}</span>
      {{#if editable}}
      <input type="text" name="system.abilities.cha.value" value="{{abilities.cha.value}}" data-dtype="Number" />
      {{else}}
      <span class="stat-value">{{abilities.cha.value}}</>
        {{/if}}
