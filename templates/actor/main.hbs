        {{/if}}
    </div>
  </div>

  <!-- Center character portrait -->
  <div class="center-portrait">
    <div class="portrait-circle">
      <img src="{{actor.img}}">
    </div>
    <div class="sequence-info">
      {{#if editable}}
        <select name="system.path.sequence">
          {{selectOptions selectedPath selected=path.sequence valueAttr="name" labelAttr="name"}}
        </select>
      {{else}}
        <div class="sequence-number">{{path.sequence}}</div>
      {{/if}}
    </div>
  </div>

