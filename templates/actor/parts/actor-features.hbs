<div class="grid">
  <div class="resources grid grid-2col">
    <div class="resource flex-group-center">
      <label for="system.race.value" class="resource-label">Race</label>
      <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.race.value" value="{{system.race.value}}" data-dtype="String">
      </div>
    </div>
    <div class="resource flex-group-center">
      <label for="system.type.value" class="resource-label">Type</label>
      <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.type.value" value="{{system.type.value}}" data-dtype="String">
      </div>
    </div>
  </div>
  <div class="resources grid grid-3col">
    <div class="resouce flex-group-center">
      <label for="system.age.value" class="resource-label">Age</label>
      <div class="resouce-content flexrow flex-center flex-between">
        <input type="number" name="system.age.value" value="{{system.age.value}}" data-dtype="Number">
      </div>
    </div>
    <div class="resource flex-group-center">
      <label for="system.gender.value" class="resource-label">Gender</label>
      <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.gender.value" value="{{system.gender.value}}" data-dtype="String">
      </div>
    </div>
    <div class="resource flex-group-center">
      <label for="system.occupation.value" class="resource-label">Occupation</label>
      <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.occupation.value" value="{{system.occupation.value}}" data-dtype="String">
      </div>
    </div>
  </div>
  <div class="resources grid grid-2col">
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-controls'>
          <a class='item-control item-create' title='Create item' data-type='feature'>
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='feature'}}
          </a>
        </div>
      </li>
      {{#each features as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-controls'>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' feature'}}'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' feature'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</div>